.data
string:
	.byte 0x0D
	.byte 0x0A
	.ascii "-------------------------------------------"
	.byte 0x0D
	.byte 0x0A
	.byte 0x00
.text

.macro line_print

	b line_uart_trans_init

.endm

//////////////////////////////////////////////
//		reference error : clean project		//
//////////////////////////////////////////////

#include "uart_regs.h"

line_uart_trans_init:

	ldr r0, =uart_TX_RX_FIFO0
	ldr r1, =uart_Channel_sts_reg0
	ldr r2, =string

line_TRANSMIT_loop:

	// check to see if the Tx FIFO is empty
	ldr r3, [r1]
	and r3, r3, #0x8
	cmp r3, #0x8
	bne line_TRANSMIT_loop

	ldrb r4, [r2], #1
	strb r4, [r0]			// fill the Tx FIFO
	cmp r4, #0x00
	bne line_TRANSMIT_loop
