// Page Table 1 - Figure 2.
.globl  csd_MMUTable_lv2
.section .csd_mmu_tbl_lv2,"a"

csd_MMUTable_lv2:
.set	PAGE, 0x400000
.word	PAGE + 0x2
.set	PAGE, 0x401000
.word	PAGE + 0x2
.set	PAGE, 0x402000
.word	PAGE + 0x2

.globl  csd_MMUTable
.section .csd_mmu_tbl,"a"

csd_MMUTable:
	/* Each table entry occupies one 32-bit word and there are
	 * 4096 entries, so the entire table takes up 16KB.
	 * Each entry covers a 1MB section.
	 *
	 *    1st 1MB (0x0 ~ 0xF_FFFF) in VA ¡æ 0x0 ~ 0xFFFFF in PA
	 *    2nd 1MB -> Second Table?
	 *    3rd 1MB (0x20_0000 ~ 0x2F_FFFF) in VA ¡æ 0x40_0000 ~ 0x4F_FFFF in PA
	 */

	// 00(0000_0000) 01(0000_0001) 5d(0101_1101) e6(1110_0110)

.set	SECT, 0
.word	SECT + 0x15de6                      /* S=b1 TEX=b101 AP=b11, Domain=b1111, C=b0, B=b1 */
.set	SECT, 0x100000
.word	SECT + 0x15de6
.set	SECT, 0x400000
.word	csd_MMUTable_lv2 + 0x1e1
